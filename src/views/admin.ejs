<%- include('partials/header') %>     
    <main>

        <section class="painel">
            <div class="container">
                <div class="pedidos">
                    <h1 class="seus-pedidos">BIBLIOTECA DE PRODUTOS</h1>
                 </div>
            </div>
        </section>


            <nav>
                <ul>
                    <li class="addbutton">
                        <a href="/adicionar">Adicionar produto</a>
                    </li>
                </ul>
            </nav>


            <div class="column-header">
                <div class="item">
                    <h4>ID</h4>
                </div>

                <div class="item">
                    <h4>Nome</h4>
                </div>
                <div class="item">
                    <h4>Imagem</h4>
                </div>

                <div class="item">
                    <h4>Valor</h4>
                </div>

                <div class="item">
                    <h4>Memória Ram</h4>
                </div>

                <div class="item">
                    <h4>Placa de Vídeo</h4>
                </div>

                <div class="item">
                    <h4>Armazenamento Nvme</h4>
                </div>

                <div class="item">
                    <h4>Armazenamento Sata</h4>
                </div>

                <div class="item">
                    <h4>Ações</h4>
                </div>

            </div>
            

            <div class="tabela">
            <% maquinas.forEach(maquina => { %>
            <div class="row">
                <span class="item1"><%= maquina.id %></span>
                <span class="item1"><%= maquina.nome %></span>
                <span class="item1"><%= maquina.imagem %></span>
                <span class="item1"><%= maquina.valor %></span>
                <span class="item1"><%= maquina.memoriaRam %></span>
                <span class="item1"><%= maquina.placaDeVideo %></span>
                <span class="item1"><%= maquina.armazenamentoNvme %></span>
                <span class="item1"><%= maquina.armazenamentoSata %></span>

                <span class="item1">
                    <form action="deletar/<%= maquina.id %>?_method=DELETE" method="post">
                        <button type="submit">Deletar</button>
                    </form>
                </span>
            </div>
            <% }) %>
            </div>


    </main>
    <%- include('partials/footer') %> 